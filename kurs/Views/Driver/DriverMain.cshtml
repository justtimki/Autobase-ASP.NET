@using Autobase.Models

@{
    ViewBag.Title = "DriverMain";
    List<Trip> relatedTrips = ViewBag.relatedTrips;
}

<h2>DriverMain</h2>

@if (ViewBag.isTripCreated != null && ViewBag.isTripCreated)
{
    <div class="alert alert-success" role="alert">
        <b>Well done!</b> You successfully created trip.
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">Orders</div>
    <table class="table sortable">
        <tr>
            <td><b>Trip Number</b></td>
            <td><b>Trip Name</b></td>
            <td><b>Trip Date</b></td>
            <td></td>
        </tr>
        @foreach (Trip trip in relatedTrips)
        {
            <tr>
                <td>@trip.TripId</td>
                <td>@trip.TripName</td>
                <td>@trip.TripDate</td>
                <td>
                    @Html.ActionLink(" ", "ComleteTrip", "Driver", new { tripId = trip.TripId }, new { @class = "glyphicon glyphicon-ok" })
                </td>
            </tr>
        }
    </table>

</div>