
@{
    ViewBag.Title = "LoginPage";
}

<main>
    <div class="container">
        <div class="row">
            <h2 class="text-center">Log In</h2>
            <hr class="star-primary" />
            <div class="col-lg-8 col-lg-offset-2">
                @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                    <div class="form-group">
                        <input type="text" name="login" placeholder="Username" class="form-control" value="" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control" value="" />
                    </div>

                    <input type="submit" class="btn btn-success btn-lg" style="float: right;" value="Log in" />
                }
                <div class="container" style="padding-top: 40px;">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>